@model IEnumerable<CustomerApplication.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}
<h2>Customer's List</h2>

<p>
    <input type="button" value="Create New" onclick="location.href='@Url.Action("Create", "Customer")'" />
    <input type="button" value="Search Customer" onclick="location.href='@Url.Action("Index", "Search")'" />
</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Email</th>
        <th>Phone</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Detail", "Detail", new { id = item.Id })
            </td>
        </tr>
    }
</table>